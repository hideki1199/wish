<p>新規作成<p>

<%= form_for(@profile) do |f| %>
  <div class="form-group">
  <div class="field text-center">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, size: "30", autofocus: true %>
  </div>
  </div>


  <div class="form-group">
  <div class="field text-center">
    <%= f.label :現在の業務 %><br />
    <%= f.text_field :current_job, size: "30", autofocus: true %>
  </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <%= f.label :過去の業務経験 %><br />
      <%= f.text_field :past_job, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <%= f.label :business_skill, "できる事(仕事)" %><br />
      <%= f.text_field :business_skill, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <%= f.label :private_skill, "できる事(仕事以外)" %><br />
      <%= f.text_field :private_skill, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <%= f.label :business_connection, "人脈(仕事)" %><br />
      <%= f.text_field :business_connection, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <%= f.label :private_connection, "人脈(仕事以外)" %><br />
      <%= f.text_field :private_connection, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="field text-center">
      <%= f.label :資格 %><br />
      <%= f.text_field :qualification, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions text-center">
      <%= f.submit "情報を登録する", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

</div>
